-image = @image
-image_size = image.get_image_size[0].to_s + 'x' + image.get_image_size[1].to_s
-image_info = image.name + '.' + image.extension + ' ' + image_size
%div{:id => image.get_id}
  .delete_image{:onclick => "delete_image(this)", :data => {'image-name' => "#{image.name}"}}
    x
  %input{:onfocusout => "rename_finish(this)", :onkeypress => "checkKeyForDelete(this)"}
  .gallery-image
    %img{:src => image.get_image_path, "data-href" => image.get_image_path}
  %div{:ondblclick => "rename_image(this)", :class => "image_description", :data => {"info" => "#{image_info}"}} #{truncate(image_info, :length => 25, :omission => '...')}
